{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://furchainlabs.github.io/protocol/v1/furchain.schema.json",
  "type": "object",
  "required": ["version", "id", "owner", "keys", "characters"],
  "additionalProperties": true,
  "properties": {
    "version": { "type": "integer", "const": 1 },
    "id": { "type": "string", "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-7[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$" },
    "owner": { "type": "string", "minLength": 1 },
    "defaultBranch": { "type": "string", "minLength": 1 },
    "keys": { "type": "string", "minLength": 1 },
    "characters": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "display", "path"],
        "additionalProperties": true,
        "properties": {
          "id": { "type": "string", "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-7[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$" },
          "name": { "type": "string", "minLength": 1 },
          "display": { "type": "string", "minLength": 1 },
          "path": { "type": "string", "minLength": 1 }
        }
      }
    }
  }
}
