{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://furchainlabs.github.io/protocol/v1/keys.schema.json",
  "type": "object",
  "required": ["version", "current", "keys"],
  "additionalProperties": true,
  "properties": {
    "version": { "type": "integer", "const": 1 },
    "current": {
      "type": "object",
      "required": ["sigKid"],
      "properties": {
        "sigKid": { "type": "string", "minLength": 1 },
        "encKid": { "oneOf": [{ "type": "string", "minLength": 1 }, { "type": "null" }] }
      }
    },
    "keys": {
      "type": "array",
      "minItems": 1,
      "contains": {
        "type": "object",
        "properties": { "use": { "const": "sig" } },
        "required": ["use"]
      },
      "items": {
        "type": "object",
        "required": ["kid", "use", "alg", "publicKey", "fingerprint", "status", "created"],
        "additionalProperties": true,
        "properties": {
          "kid": { "type": "string", "minLength": 1 },
          "use": { "type": "string", "enum": ["sig", "enc"] },
          "alg": { "type": "string", "enum": ["Ed25519", "X25519"] },
          "publicKey": { "type": "string", "pattern": "^[A-Za-z0-9_-]+$" },
          "fingerprint": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" },
          "status": { "type": "string", "enum": ["active", "revoked"] },
          "created": { "type": "string", "format": "date-time" },
          "revoked": { "type": "string", "format": "date-time" }
        },
        "allOf": [
          {
            "if": { "properties": { "use": { "const": "sig" } } },
            "then": { "properties": { "alg": { "const": "Ed25519" } } }
          },
          {
            "if": { "properties": { "use": { "const": "enc" } } },
            "then": { "properties": { "alg": { "const": "X25519" } } }
          }
        ]
      }
    }
  }
}
